{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "strict": false,
        "removeComments": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": [
            "es2020",
            "DOM"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}